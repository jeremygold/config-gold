{
  "model": "opusplan",
  "editor": {
    "mode": "vim"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "redis-cli -h localhost -p 6379 PUBLISH claude:notifications '{\"type\":\"notification\",\"hostname\":\"'$(hostname)'\"}' 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "redis-cli -h localhost -p 6379 PUBLISH claude:notifications '{\"type\":\"stop\",\"hostname\":\"'$(hostname)'\"}' 2>/dev/null || true"
          }
        ]
      }
    ],
    "Task": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/log-agent-task.sh '$SUBAGENT_TYPE' '$TASK_ID' '$PWD'"
          }
        ]
      }
    ]
  }
}
